/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();
  soft_reconnect_usb();   
  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART1_UART_Init();
  MX_RTC_Init();

  // HAL_PWR_EnableBkUpAccess();
  // __HAL_RCC_BKP_CLK_ENABLE() ;
  MX_USB_DEVICE_Init();
  /* USER CODE BEGIN 2 */
  
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  uint32_t preTick=uwTick;    //uwTick在systick中断中加1，也就是1ms加一次,也可以用  HAL_GetTick();


  HAL_RTCEx_BKUPWrite(&hrtc,RTC_BKP_DR1,MAGIC_VALUE&0xffff);
  HAL_RTCEx_BKUPWrite(&hrtc,RTC_BKP_DR2,(MAGIC_VALUE>>16)&0xffff);
  while (1)
  {
    /* USER CODE END WHILE */ 
    if (uwTick-preTick>=500){
      magic_value=0;
        preTick=uwTick;
        HAL_GPIO_TogglePin(GPIOG,GPIO_PIN_14);
       magic_value|=HAL_RTCEx_BKUPRead(&hrtc,RTC_BKP_DR1);
       magic_value|=HAL_RTCEx_BKUPRead(&hrtc,RTC_BKP_DR2)<<16;
        CDC_Transmit_FS((uint8_t *)&magic_value,4);
    }
    if (usb_rx_flag==1){
      usb_rx_flag=0;
      if(usb_rx_len>5){
        if (strncmp("reset",(char *)UserRxBufferFS,5)==0){
            CDC_Transmit_FS(UserRxBufferFS,usb_rx_len);
              HAL_GPIO_TogglePin(GPIOG,GPIO_PIN_14);
              HAL_Delay(100);
              HAL_GPIO_TogglePin(GPIOG,GPIO_PIN_14);
              HAL_Delay(100);
              HAL_GPIO_TogglePin(GPIOG,GPIO_PIN_14);
              HAL_Delay(100);
              HAL_GPIO_TogglePin(GPIOG,GPIO_PIN_14);
              HAL_Delay(100);
            HAL_NVIC_SystemReset();

        }

      }

    }
        /* USER CODE BEGIN 3 */
  }

  /* USER CODE END 3 */
}

